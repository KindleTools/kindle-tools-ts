{
  "name": "kindle-tools-ts",
  "version": "0.5.0",
  "description": "A robust TypeScript library to parse and process Amazon Kindle 'My Clippings.txt' files with smart merging, deduplication, and multiple export formats",
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "bin": {
    "kindle-tools": "./dist/cli.js"
  },
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      },
      "require": {
        "types": "./dist/index.d.cts",
        "default": "./dist/index.cjs"
      }
    },
    "./cli": {
      "import": {
        "types": "./dist/cli.d.ts",
        "default": "./dist/cli.js"
      },
      "require": {
        "types": "./dist/cli.d.cts",
        "default": "./dist/cli.cjs"
      }
    }
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE",
    "CHANGELOG.md"
  ],
  "scripts": {
    "build": "tsup",
    "build:watch": "tsup --watch",
    "dev": "tsup --watch",
    "gui": "vite --config vite.config.gui.ts",
    "gui:build": "vite build --config vite.config.gui.ts",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:ui": "vitest --ui",
    "lint": "biome check .",
    "lint:fix": "biome check --write .",
    "format": "biome format --write .",
    "check": "biome check --write . && pnpm test",
    "typecheck": "tsc --noEmit && tsc --noEmit -p src/gui/tsconfig.json",
    "prepare": "husky",
    "changeset": "changeset",
    "version": "changeset version",
    "release": "pnpm build && changeset publish",
    "clean": "rimraf dist coverage .turbo",
    "prepublishOnly": "pnpm build"
  },
  "keywords": [
    "kindle",
    "clippings",
    "highlights",
    "notes",
    "bookmarks",
    "parser",
    "ebook",
    "amazon",
    "my-clippings",
    "obsidian",
    "joplin",
    "readwise",
    "markdown",
    "export",
    "typescript"
  ],
  "author": "AndrÃ©s M. JimÃ©nez",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/KindleTools/kindle-tools-ts.git"
  },
  "homepage": "https://github.com/KindleTools/kindle-tools-ts#readme",
  "bugs": {
    "url": "https://github.com/KindleTools/kindle-tools-ts/issues"
  },
  "engines": {
    "node": ">=18.18.0"
  },
  "packageManager": "pnpm@10.27.0",
  "lint-staged": {
    "*.{js,ts,cjs,mjs,json,md}": [
      "biome check --write --no-errors-on-unmatched"
    ]
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.10",
    "@changesets/cli": "^2.29.8",
    "@types/handlebars": "^4.1.0",
    "@types/jszip": "^3.4.1",
    "@types/node": "^25.0.3",
    "@vitest/coverage-v8": "^4.0.16",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "rimraf": "^6.1.2",
    "tsup": "^8.5.1",
    "typescript": "^5.9.3",
    "vite": "^6.0.7",
    "vite-tsconfig-paths": "^6.0.3",
    "vitest": "^4.0.16"
  },
  "dependencies": {
    "date-fns": "^4.1.0",
    "handlebars": "^4.7.8",
    "jszip": "^3.10.1",
    "zod": "^4.3.4"
  }
}
